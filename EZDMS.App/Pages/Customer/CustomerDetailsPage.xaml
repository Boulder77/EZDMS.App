<local:BasePage x:TypeArguments="local:CustomerViewModel" x:Class="EZDMS.App.CustomerDetailsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EZDMS.App"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="1100"
      >

    <Border Background="{StaticResource WordVeryVeryLightBlueBrush}" 
            >
        
        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="5" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <local:CustomerCardControl
                d:DataContext="{x:Static local:CustomerCardDesignModel.Instance}"/>

            <Border Grid.Row="1" Background="{StaticResource WordLightBlueBrush}" />

            <local:CustomerAddressControl
                Grid.Row="3"
                d:DataContext="{x:Static local:CustomerAddressDesignModel.Instance}"
                />

        </Grid>

    </Border>
    
    
</local:BasePage>
