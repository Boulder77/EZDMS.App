<local:BasePage x:TypeArguments="local:SalesRecallViewModel" x:Class="EZDMS.App.SalesRecallPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EZDMS.App"
      xmlns:core="clr-namespace:EZDMS.App.Core;assembly=EZDMS.App.Core"
      mc:Ignorable="d" 
      Height="700"
      Width="1070"
      d:DesignHeight="450" d:DesignWidth="800"
      >

    <Grid >
        <Grid.RowDefinitions>

            <!-- Title bar -->
            <RowDefinition Height="100" />

            <!-- Chat List -->
            <RowDefinition Height="*" />

        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>

            <!-- Title bar -->
            <ColumnDefinition Width="50" />

            <!-- Title bar -->
            <ColumnDefinition Width="*" />

        </Grid.ColumnDefinitions>

        <!-- Working spinner container -->
        <StackPanel VerticalAlignment="Top"  Grid.Row="1" Grid.ColumnSpan="2"  Background="Transparent"                     
                  Visibility="{Binding SalesDealRecallPageLoading, 
                  Converter={local:BooleanToVisiblityGoneConverter}, 
                   FallbackValue=Collapsed}"
                  >
            <TextBlock Text="Loading"
                       Foreground="{StaticResource ForegroundLightBrush}"
                       FontFamily="{StaticResource LatoBold}"
                       FontSize="{StaticResource FontSizeXXLarge}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"/>

            <Border Padding="0 5 0 0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                
                <TextBlock 
                    Foreground="{StaticResource ForegroundLightBrush}"
                    FontSize="180"                  
                    Style="{StaticResource SpinningText}" />
            </Border>

        </StackPanel>

        <DataGrid x:Name="dgridSales" 
                  VerticalAlignment="Stretch" 
                  HorizontalAlignment="Stretch"  
                  SelectionMode="Extended"                 
                  Grid.Column="1" Grid.Row="1" 
                  ItemsSource="{Binding FilteredItems}"
                  SelectedItem="{Binding SelectedDeal}"
                  Visibility="{Binding SalesDealRecallPageLoading, Converter={local:BooleanToVisiblityConverter}}" >

