            </DataGrid.Resources>-->

            <DataGrid.Columns>
                
                <DataGridTextColumn
                    Header="Deal #"
                    MinWidth="50"
                    Width="*"
                    Binding="{Binding DealNumber}"/>

                <DataGridTextColumn
                    Header="Status"
                    MinWidth="120"
                    Width="*"
                    Binding="{Binding Status}"/>

                <DataGridTextColumn
                    Header="Buyer Name"
                    MinWidth="150"
                    Width="*"
                    Binding="{Binding BuyerFullName}"/>

                <DataGridTextColumn
                    Header="Vehicle Info"
                    MinWidth="150"
                    Width="*"
                    Binding="{Binding VehicleInfo}"/>

                <DataGridTextColumn
                    Header="Type"
                    MinWidth="100"
                    Width="*"
                    Binding="{Binding Type}"/>

                <DataGridTextColumn
                    Header="Deal Date"
                    MinWidth="150"
                    Width="*"
                    Binding="{Binding DealDate}"/>

                <DataGridTextColumn
                    Header="Last Activity Date"
                    MinWidth="150"
                    Width="*"
                    Binding="{Binding LastActivityDate}"/>

                <DataGridTextColumn
                    Header="SalesPerson"
                    MinWidth="150"
                    Width="*"
                    Binding="{Binding SalesPerson}"/>

            </DataGrid.Columns>

        </DataGrid>
    
    </Grid>
</local:BasePage>
