<local:BasePage x:TypeArguments="local:SalesDeskingInfoViewModel" x:Class="EZDMS.App.DeskingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EZDMS.App"
      mc:Ignorable="d"
      d:DataContext="{x:Static local:SalesDeskingInfoDesignModel.Instance}"
      d:DesignHeight="600" d:DesignWidth="1000"
      >

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <local:SalesSummaryDetails/>

        <local:TruthInLendingDisclosureControl
            Grid.Row="1"/>

        <local:SalesDeskingControl 
                Grid.Column="1"
            Grid.RowSpan="2"/>

    </Grid>
</local:BasePage>
