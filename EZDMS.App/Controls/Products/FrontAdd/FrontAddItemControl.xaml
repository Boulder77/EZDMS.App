    <UserControl x:Class="EZDMS.App.FrontAddItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EZDMS.App"
             mc:Ignorable="d" 
             
             d:DesignHeight="60" d:DesignWidth="910">   

                        <Border x:Name="background"  Background="{StaticResource WordVeryVeryLightBlueBrush}"
                    CornerRadius="5">


           <Grid x:Name="container" Background="Transparent">
           <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="60" />
                <ColumnDefinition Width="150" />
                <ColumnDefinition Width="150" />
                <ColumnDefinition Width="80" />
                <ColumnDefinition Width="80" />
                <ColumnDefinition Width="140" />
            </Grid.ColumnDefinitions>
                    
                    <ComboBox  ItemsSource="{Binding FilteredAdds}"  
                               Margin="5,0,0,0"
                           SelectedItem="{Binding SelectedAdd}"
                           Background="{StaticResource BackgroundVeryLightBrush}"                           
                           IsSynchronizedWithCurrentItem="True"
                           DisplayMemberPath="Name"                    
                           
                           VerticalAlignment="Center"
                           FontFamily="{StaticResource LatoRegular}"
                           />


            <StackPanel Grid.Column="1"
                        Margin="15"
                        >

                <!-- Add Button -->
                <Button Style="{StaticResource IconGrowButton}"
                            Command="{Binding}"
                            BorderBrush="{StaticResource WordDarkBlueBrush}"
                            BorderThickness="1"
                            Width="30"
                            Height="30"
                            Content="{StaticResource FontAwesomePlusIcon}"                        
                            Foreground="{StaticResource WordDarkBlueBrush}"
                            />



            </StackPanel>
               
                
                <!-- Retail -->
                <TextBox Grid.Column="2"
                         Margin="5,15,5,15"    
                         Text="{Binding Retail}"
                         HorizontalContentAlignment="Right"
                         Background="{StaticResource BackgroundVeryLightBrush}"
                         Grid.Row="1"
                         FontSize="{StaticResource FontSizeRegular}"                     
                         />

            <!-- Cost -->
                 <TextBox Grid.Column="3"
                        Margin="5,15,5,15"    
                        Text="{Binding Cost}"
                        HorizontalContentAlignment="Right"
                        Background="{StaticResource BackgroundVeryLightBrush}"
                        Grid.Row="1"
                        FontSize="{StaticResource FontSizeRegular}"
                        />
            
                <CheckBox Grid.Column="4"
                      IsChecked="{Binding DefaultInPayment}"  
                      />

                <CheckBox Grid.Column="5"
                      IsChecked="{Binding DefaultInPayment}"  
                      />

            <StackPanel Orientation="Horizontal"                        
                        Grid.Column="6"
                        Margin="5"
                        >
                
                <!-- Delete Button -->
                <Button Style="{StaticResource IconGrowButton}" 
                        Width="40"
                        Margin="5,0"
                        Command="{Binding ClearUserDataCommand}"
                        Foreground="{StaticResource ForegroundVeryDarkBrush}"
                        Content="{StaticResource FontAwesomeTrashCanIcon}"                        
                        />

                <!-- New Button -->
                <Button Style="{StaticResource IconGrowButton}" 
                        Width="40"
                        Margin="5,0"
                        Command="{Binding AddCommand}"
                        Foreground="{StaticResource WordBlueBrush}"
                        Content="{StaticResource FontAwesomePlusIcon}"                        
                        />

            </StackPanel>
               
               
            <!--Style="{StaticResource IconGrowButton}"
                    Height="{Binding MinHeight, RelativeSource={RelativeSource AncestorType=Grid}}"-->


        </Grid>        
    </Border>
